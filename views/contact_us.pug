    title Contact Us
include logged_in_navbar
main.mt-5
    #main-side-left.main-side
        .main-side_text.container
            .text-group
                .text-group_title
                    i.fas.fa-map-marked-alt
                    .icon-title Address
                .text-mute 1 Science Square, Newcastle upon Tyne NE4 5TG
            .text-group
                .text-group_title
                    i.fas.fa-phone-alt
                    .icon-title Lets Talk
                .text-mute(style='color:#32AD5E') 0191 208 6000
            .text-group
                .text-group_title
                    i.fas.fa-map-marked-alt
                    .icon-title Address
                .text-mute 1 Science Square, Newcastle upon Tyne NE4 5TG
    #main-side-right.main-side.border
        h1.text-center.mt-2.mb-2 Send us a message
        form
            .form-items.row
                .form-title.border TELL US YOUR NAME *
                input#first-name.form-control.row-inputs.col(type='text' placeholder='First Name')
                input#last-name.form-control.row-inputs.col(type='text' placeholder='Last Name')
            .form-items.row
                .form-title.border ENTER YOUR EMAIL *
                input#email.form-control.col(type='email' placeholder='Eg. example@email.com')
            .form-items.row
                .form-title.border ENTER YOUR PHONE NUMBER *
                input#phone-number.form-control.col(type='text' placeholder='Eg. 07412345678')
            .form-items.row
                .form-title.border MESSAGE *
                textarea#message.form-control.col(rows='3' style='resize:none')
            button.btn.btn-lg.btn-submit.mt-5(type='button')  Send Message
