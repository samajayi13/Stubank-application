    link(rel='stylesheet' href='/stylesheets/navbar.css')
    script(src='https://kit.fontawesome.com/2354c028ce.js' crossorigin='anonymous')
include navbar
main.container
    .main-section.d-flex.justify-content-center.rounded.shadow-lg
        .main-section_img.d-none.d-sm-none.d-md-block.d-lg-block
        .main-section_form
            form.ml-3(action='')
                img.logo(src='/images/logo.png' alt='')
                h3.ml-3.mt-3 Sign into your account
                input.form-control.mt-4(type='text' placeholder='Username')
                input.form-control.mt-4(type='password' placeholder='Password')
                button.btn-primary.btn.mt-4.ml-4  Sign in
