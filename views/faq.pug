script.
    document.addEventListener("click",function(e){
        var parentElm = null;
        if(e.target.classList.contains("btn-link")){
            if(document.querySelector(".fa-angle-up")){
                var angleUp = document.querySelector(".fa-angle-up");
                angleUp.classList.remove("fa-angle-up");
                angleUp.classList.add("fa-angle-down")
                angleUp.style.color = "black";
                parentElm = angleUp.parentElement;
            }
            if(e.target.parentElement.parentElement.children[1].classList.contains("fa-angle-down")){
                if(parentElm){
                    if(parentElm !== e.target.parentElement.parentElement){
                        e.target.parentElement.parentElement.children[1].classList.remove("fa-angle-down");
                        e.target.parentElement.parentElement.children[1].classList.add("fa-angle-up");
                        e.target.parentElement.parentElement.children[1].style.color = "#2D7DE9";
                    }
                }else{
                    e.target.parentElement.parentElement.children[1].classList.remove("fa-angle-down");
                    e.target.parentElement.parentElement.children[1].classList.add("fa-angle-up");
                    e.target.parentElement.parentElement.children[1].style.color = "#2D7DE9";
                }
            } else if(e.target.parentElement.parentElement.children[1].classList.contains("fa-angle-up")){
                e.target.parentElement.parentElement.children[1].classList.remove("fa-angle-up");
                e.target.parentElement.parentElement.children[1].classList.add("fa-angle-down");
                e.target.parentElement.parentElement.children[1].style.color = "black";
            }
        }
    })
