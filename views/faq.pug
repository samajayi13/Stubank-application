        #accordionExample.accordion
            .card
                #headingOne.card-header
                    h2.mb-0
                        button.btn.btn-link(type='button' data-toggle='collapse' data-target='#collapsePaymentOne' aria-expanded='true' aria-controls='collapsePaymentOne')
