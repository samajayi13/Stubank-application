doctype html
head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
    link(rel='stylesheet' href='/stylesheets/transfers.css')
    link(rel='stylesheet' href='/stylesheets/logged_in_navbar.css')
    script(src='https://kit.fontawesome.com/2354c028ce.js' crossorigin='anonymous')
include logged_in_navbar
section.float-left.side-left.d-none.d-sm-none.d-md-block.d-lg-block
    .account-box.mt-4.ml-4.rounded-lg
        .account-box_top.row.ml-2.mb-2
            i.fas.fa-user-circle.float-left.mt-2.mr-2
            .float-left
                h4.col Account Name
                p.text-muted.ml-3 ID 157344
        p.text-muted.float-left.ml-3.balance Balance:
        p.float-right.mr-3.figure(style='color:white;font-weight: 800') $450,000
    .titles.ml-4
        .titles-group.active.rounded-lg
            i.fas.fa-donate.ml-2.mr-2
            span.titles-group_text Transactions
        .titles-group.rounded-lg
            i.fas.fa-exchange-alt.ml-2.mr-2
            span.titles-group_text Transfer
        .titles-group.rounded-lg
            i.fas.fa-money-check.ml-2.mr-2
            span.titles-group_text Payment
        .titles-group.rounded-lg
            i.fas.fa-user-circle.ml-2.mr-2
            span.titles-group_text Account
    .account-box_last.mt-4.ml-4.rounded-lg
        .account-box_top.row.ml-2.mb-2
            i.fas.fa-user.float-left.mt-3.mr-2
            .float-left
                h6.col.mt-2 John Smith
                p.text-muted.ml-3 ID:
                    span.userID 1
main.float-left.side-right
    h3 Transactions
    .container
        .row.justify-content-md-center
            .col.col-6
                .digital-card

    table.table.table-hover
        thead
            tr
                th(scope='col') Type
                th(scope='col') From/To
                th(scope='col') Amount
                th(scope='col') Date
        tbody.table-body

